$desktop_size = 1024px
$tablet_size = 768px
$phone_size = 320px

@import "Header/style.styl"
@import "Content/style.styl"
@import "Footer/style.styl"

h1
	color red
body
	background white
	font-family 'Open Sans', sans-serif
	
.u-clearfix
	clear both
	float none
.mobile
	display block
	@media screen and (min-width: $desktop_size)
		display none
.desktop
	display none
	@media screen and (min-width: $desktop_size)
		display block
		

.camera_pag
	margin-top -70px 

.wrap_desktop.camera_wrap
	margin-bottom -0px !important 
	
.slicknav_icon
	display none
.slicknav_menutxt
	text-shadow none !important
	color #00a3ff !important
.slicknav_menu
	display block
	position static
	background none
	.slicknav_btn
		position absolute
		top 15px
		right 3em
		font-size 1rem
		z-index 99999
		color #000
		background none
		text-shadow none !important
	ul
		margin-bottom 0		
	li		
		text-align center
		a
			display block
			letter-spacing .12em
			font-size 20px
			font-weight 400
			text-transform uppercase
			width 100%
			color black
			background white
			border-top 1px solid #f96816
			transition all 0.2s
			text-decoration none
			&:hover
				color #2f383d
				background #f96816
		ul
			li
				a
					padding 0
			
	@media screen and (min-width: $desktop_size)
		display none !important

	
